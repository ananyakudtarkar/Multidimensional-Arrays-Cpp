// Multi-dimensional array
#include <iostream>
using namespace std;

int main() {
    int r1, c1, r2, c2;
    cout<<"Enter matrix dimensions for A (rows and columns): ";
    cin>>r1;
    cin>>c1;
    
    cout<<"Enter matrix dimensions for B (rows and columns): ";
    cin>>r2;
    cin>>c2;
    
    if(r1 == r2 && c1 == c2){
        int A[r1][c1], B[r2][c2];
        cout<<"Enter row-wise values for matrix A: \n";
        for (int i = 0; i<r1; i++){
            cout<<"Values for row "<<i+1<<" : ";
            for (int j = 0; j<c1; j++){
                int k;
                cin>>k;
                A[i][j] = k;
            }
        }
        cout<<"\n";
        cout<<"Enter row-wise values for matrix B: \n";
        for (int i = 0; i<r1; i++){
            cout<<"Values for row "<<i+1<<" : ";
            for (int j = 0; j<c1; j++){
                int k;
                cin>>k;
                B[i][j] = k;
            }
        }
        int C[r1][r2];
        for (int i = 0; i<r1; i++){
            for (int j = 0; j<c1; j++){
                C[i][j] = A[i][j]+B[i][j];
            }
        }
        
        cout<<"Addition of Matrices A and B: \n";
        for (int i = 0;i<r1; i++){
            for (int j = 0; j<c1; j++){
                cout<<C[i][j]<<" ";
            }
            cout<<"\n"; 
        }
    }
    else {
        cout<<"Dimensions of both the matrices should be equal.";
    }
    return 0;
}

/*
Enter matrix dimensions for A (rows and columns): 4 3
Enter matrix dimensions for B (rows and columns): 4 3
Enter row-wise values for matrix A: 
Values for row 1 : 1 2 3 
Values for row 2 : 1 3 4
Values for row 3 : 2 5 6 
Values for row 4 : 4 6 7

Enter row-wise values for matrix B: 
Values for row 1 : 2 4 6 
Values for row 2 : 3 5 6
Values for row 3 : 6 7 3
Values for row 4 : 6 8 3
Addition of Matrices A and B: 
3 6 9 
4 8 10 
8 12 9 
10 14 10 

*/
